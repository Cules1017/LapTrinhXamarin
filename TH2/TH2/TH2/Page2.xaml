<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TH2.Page2">
    <ContentPage.Content>
        <ListView x:Name="dscity" ItemSelected="dscity_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Image Margin="4" WidthRequest="100" HeightRequest="50" Source="{Binding Cityimg}"></Image>
                            <Label VerticalTextAlignment="Center" FontAttributes="Bold" HorizontalOptions="Center" Text="{Binding Cityname}"></Label>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>