<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TH2.HotelView"
             Title="{Binding city.Cityname}">
    <ContentPage.Content>
        <ListView x:Name="dshotel" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Image Margin="4" WidthRequest="100" HeightRequest="50" Source="{Binding Htimg}"></Image>
                            <StackLayout>
                                
                                <Label Text="{Binding Htname}"></Label>
                                <Label Text="{Binding Htprice}"></Label>
                                <Label Text="{Binding Htaddress}"></Label>
                                
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>