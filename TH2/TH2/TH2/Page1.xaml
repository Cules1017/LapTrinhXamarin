<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TH2.Page1"
             Title=" Các Ngành Trong Trường UIT HCM">
    <ContentPage.Content>
        <ListView x:Name="dskhoa">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Margin="6">
                            <Label HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="{Binding Tenkhoa}"></Label>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>